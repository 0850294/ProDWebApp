@page
@model Blockchain.Pages.CheckDataModel
@{
    ViewData["Title"] = "CheckData";
}

<h2 class="title" style="margin-left: 15px;">Data bekijken</h2>


<div class="container">
        <div class="row">
            <div class="col-lg-2 Naam" style="padding-right: 15px;">
                <h4>Naam:</h4>
                @foreach (Blockchain.Models.Block std in Blockchain.Blockchain.governmentChain.Chain)
                {
                    <p style="word-wrap: break-word;">@std.Index</p>
                }
                </div>
            <div class="col-lg-2 BSN" style="padding-right: 15px;">
                <h4>BSN:</h4>
                @foreach (Blockchain.Models.Block std in Blockchain.Blockchain.governmentChain.Chain)
                {
                    <p style="word-wrap: break-word;">@std.Hash</p>
                }
            </div>
            <div class="col-lg-3 bDate" style="padding-right: 15px;">
                <h4>Geboortedatum:</h4>
                @foreach (Blockchain.Models.Block std in Blockchain.Blockchain.governmentChain.Chain)
                {
                    <p style="word-wrap: break-word;">@std.PreviousHash</p>
                }
            </div>
            <div class="col-lg-2 TypeData" style="padding-right: 15px;">
                <h4>Type data:</h4>
                @foreach (Blockchain.Models.Block std in Blockchain.Blockchain.governmentChain.Chain)
                {
                    <p style="word-wrap: break-word;">@std.GetBlockData()</p>
                }
            </div>
            <div class="col-lg-2 ValueBlock" style="padding-right: 15px;">
                <h4>Gegevens:</h4>
                @foreach (Blockchain.Models.Block std in Blockchain.Blockchain.governmentChain.Chain)
                {
                    <p style="word-wrap: break-word;">@std.TimeStamp</p>
                }
        <div id="cert" class="col-lg-1 cert">
            @Html.LabelFor(x => Model.cert, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownListFor(x => Model.cert, new SelectList(Model.cert, "Value"), htmlAttributes: new { @class = "form-control", id = "cert" })
                @Html.ValidationMessageFor(x => x.cert, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>
