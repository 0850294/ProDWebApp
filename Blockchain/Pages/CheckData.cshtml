@page
@model Blockchain.Pages.CheckDataModel
@{
ViewData["Title"] = "CheckData";
}

<h2 class="title" style="margin-left: 15px;">Data bekijken</h2>


<div class="container">
    <div class="row">
        <div class="col-lg-2 Naam" style="padding-right: 15px;">
            <h4>Naam:</h4>

        </div>
        <div class="col-lg-2 BSN" style="padding-right: 15px;">
            <h4>BSN:</h4>

        </div>
        <div class="col-lg-3 bDate" style="padding-right: 15px;">
            <h4>Geboortedatum:</h4>

        </div>
        <div class="col-lg-2 TypeData" style="padding-right: 15px;">
            <h4>Type data:</h4>

        </div>
        <div class="col-lg-2 ValueBlock" style="padding-right: 15px;">
            <h4>Gegevens:</h4>
        </div>
    </div>
    @foreach (Blockchain.Models.Block std in Blockchain.Blockchain.governmentChain.Chain){
        
    <div class="container">
        <div class="row">
            <div class="col-lg-2 Naam" style="padding-right: 15px;">

                <p style="word-wrap: break-word;">@std.GetBlockData().person.surname</p>

            </div>
            <div class="col-lg-2 BSN" style="padding-right: 15px;">


                <p style="word-wrap: break-word;">@std.GetBlockData().person.bsn</p>

            </div>
            <div class="col-lg-3 bDate" style="padding-right: 15px;">


                <p style="word-wrap: break-word;">@std.GetBlockData().person.birthDate</p>

            </div>
            <div class="col-lg-2 TypeData" style="padding-right: 15px;">

                <p style="word-wrap: break-word;">@std.GetBlockData().type</p>

            </div>
            <div class="col-lg-2 ValueBlock" style="padding-right: 15px;">
                <p style="word-wrap: break-word;">@std.GetBlockData().value</p>

            </div>
        </div>
    </div>
    }
</div>