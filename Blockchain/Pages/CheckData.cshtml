@page
@model Blockchain.Pages.CheckDataModel
@{
ViewData["Title"] = "CheckData";
}




<div class="container">
    <div class="row">
        <h2 class="title">Data bekijken</h2>
        <div class="col-lg-2 Naam" style="padding-right: 15px;">
            <h4>Naam:</h4>

        </div>
        <div class="col-lg-2 BSN" style="padding-right: 15px;">
            <h4>BSN:</h4>

        </div>
        <div class="col-lg-3 bDate" style="padding-right: 15px;">
            <h4>Geboortedatum:</h4>

        </div>
        <div class="col-lg-2 TypeData" style="padding-right: 15px;">
            <h4>Type data:</h4>

        </div>
        <div class="col-lg-2 ValueBlock" style="padding-right: 15px;">
            <h4>Gegevens:</h4>
        </div>
    </div>
    @{
        @foreach (Blockchain.Models.Block std in Blockchain.Blockchain.governmentChain.Chain){
        @if (std.PreviousHash==""){continue;}   
            Blockchain.Models.Data data = std.GetBlockData();
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 Naam" style="padding-right: 15px;">

                        <p style="word-wrap: break-word;">@data.person.surname</p>

                    </div>
                    <div class="col-lg-2 BSN" style="padding-right: 15px;">


                        <p style="word-wrap: break-word;">@data.person.bsn</p>

                    </div>
                    <div class="col-lg-3 bDate" style="padding-right: 15px;">


                        <p style="word-wrap: break-word;">@data.person.birthDate</p>

                    </div>
                    <div class="col-lg-2 TypeData" style="padding-right: 15px;">

                        <p style="word-wrap: break-word;">@data.type</p>

                    </div>
                    <div class="col-lg-2 ValueBlock" style="padding-right: 15px;">
                        <p style="word-wrap: break-word;">@data.value</p>

                    </div>
                </div>
            </div>
        }
    }
</div>